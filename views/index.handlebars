<h1>{{title}}</h1>

<form action="/api/members" method="POST">
  <label for="name">Name</label>
  <input type="text" name="name" id="name">

  <label for="email">Email</label>
  <input type="text" name="email" id="email">
</form>

<h4>Members</h4>
<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Email</td>
    </tr>
  </thead>
  <tbody>
    {{#each members}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.email}}</td>
    </tr>
    {{#each}}
  </tbody>
</table>